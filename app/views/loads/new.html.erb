	type="text/javascript">
</script>
<script type="text/javascript">
	var homeLat=<%= session[:geo_location] || '""' %>;
	var homeLng=<%= session[:geo_location] || '""' %>;
</script>
<%= javascript_include_tag 'google_new' %>
<div class="PageTitle">
	New Journey
</div>
<b>NOTE: </b>session[:geo_location] value  is <%= session[:geo_location] %>
<div class="container">
	<div class="left_container">
		<% form_for(@load) do |f| %>
		  <%= f.error_messages %>
		
		<div class="data_imput_row">
			<div class="data_input_field">
				Type
			</div>
			<div class="data_input_data">
				<%=f.radio_button :load_type, :truck %> Truck
				<%=f.radio_button :load_type, :contract %> Contract
			</div>
		</div>
		<div class="data_imput_row">
			<div class="data_input_field">
				From
			</div>
			<div class="data_input_data">
				<%=f.text_field :start_loc, :onchange => "processAddress(this,'#{form_authenticity_token}');" %> <div id="load_from" class="google_error">&nbsp;&nbsp;&nbsp;&nbsp;</div>
				<%=f.hidden_field :start_lat %>
				<%=f.hidden_field :start_lng %>
			</div>
		</div>
		<div class="data_imput_row">
			<div class="data_input_field">
				To
			</div>
			<div class="data_input_data">
				<%=f.text_field :end_loc, :onchange => "processAddress(this,'#{form_authenticity_token}');" %> <div id="load_to" class="google_error">&nbsp;&nbsp;&nbsp;&nbsp;</div>
				<%=f.hidden_field :end_lat %>
				<%=f.hidden_field :end_lng %>
			</div>
		</div>
		<div class="data_imput_row">
			<div class="data_input_field">
				Date
			</div>
			<div class="data_input_data">
				<%=f.text_field :load_date %>
			</div>
		</div>
		<div class="data_imput_row">
			<div class="data_input_buttons">
				<span class="button lt_blue"><%= link_to 'Cancel', dashboard_home_path %></span>&nbsp;
				<%= f.submit "Create", {:class => 'button lt_blue', :style => "display:inline"} %>
			</div>
		</div>		

		<% end %>
	</div>
	<div class="right_container" style="position:relative;height:370px">
		<div id="map_shadow"> </div>
		<div id="map" style=""> </div>
	</div>
</div>
