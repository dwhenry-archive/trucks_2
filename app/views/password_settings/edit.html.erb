<div class="PageTitle">
	Change Your Password
</div>


<% form_tag url_for(:action => 'update'), :method => :put do %>
<%= hidden_field_tag :id, current_user.id %>  

	<div class="data_imput_row">
		<div class="data_input_field">
			Old Password
		</div>
		<div class="data_input_data">
			<%= password_field_tag 'old_password', @old_password, :size => 45 %>
		</div>
	</div>
	<div class="data_imput_row">
		<div class="data_input_field">
			New Password
		</div>
		<div class="data_input_data">
			<%= password_field_tag 'password', {}, :size => 45 %> Between 6 and 40 characters
		</div>
	</div>	
	<div class="data_imput_row">
		<div class="data_input_field">
			Confirm New  Password
		</div>
		<div class="data_input_data">
			<%= password_field_tag 'password_confirmation', {}, :size => 45 %>
		</div>
	</div>

	<div class="data_imput_row">
		<div class="data_input_buttons">
	        <span class="button lt_blue"><%= link_to 'Cancel', profile_path(current_user) %></span>
	        <%= submit_tag "Update", {:class => 'button lt_blue', :style => "display:inline"} %>
		</div>
	</div>

<% end %>