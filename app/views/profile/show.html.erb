<div class="PageTitle">
	User Profile
</div>

<div class="data_imput_row">
	<div class="data_input_field">
		Created
	</div>
	<div class="data_input_data">
		<%=h @user.created_at.to_s(:long) %>
	</div>
</div>
<div class="data_imput_row">
	<div class="data_input_field">
		Last Updated
	</div>
	<div class="data_input_data">
		<%=h @user.updated_at.to_s(:long) %>
	</div>
</div>
<div class="data_imput_row">
	<div class="data_input_field">
		Login
	</div>
	<div class="data_input_data">
		<%=h @user.login %>
	</div>
</div>
<div class="data_imput_row">
	<div class="data_input_field">
		Password
	</div>
	<div class="data_input_data">
		<%= link_to 'CHANGE PASSWORD', edit_password_setting_path(current_user) %>
	</div>
</div>

<div class="data_imput_row">
	<div class="data_input_buttons">
        <span class="button blue"><%= link_to 'Edit', edit_profile_path(current_user) %></span>
	</div>
</div>
	
